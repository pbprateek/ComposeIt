<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.composeit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeIt">
        <activity
            android:name=".ui.activity.MusicKnobCompleteActivity"
            android:exported="true"
            android:label="@string/title_activity_music_knob_complete"
            android:theme="@style/Theme.ComposeIt.NoActionBar" />
        <activity
            android:name=".ui.activity.MusicKnobActivity"
            android:exported="true"
            android:label="@string/title_activity_music_knob"
            android:theme="@style/Theme.ComposeIt.NoActionBar" />
        <activity
            android:name=".ui.activity.AnimProgressBarActivity"
            android:exported="true"
            android:theme="@style/Theme.ComposeIt.NoActionBar" />
        <activity
            android:name=".ui.activity.BlurAlphaImageActivity"
            android:exported="true"
            android:theme="@style/Theme.ComposeIt.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>